{% block body %}
    <div class="bg-pattern-wrap ratio2_1">
        <div class="bg-patter">
            <img src="{{ asset('app/assets/images/banner/bg-pattern2.png') }}" class="bg-img" alt="pattern" />
        </div>
    </div>
    <!-- Main Start -->
    <main class="main-wrap login-page mb-xxl">
        <img class="logo" src="{{ asset('images/logo.png') }}" alt="logo" />
        <img class="logo logo-w" src="{{ asset('front/assets/images/logo/logo-w.png') }}" alt="logo" />
        <p class="font-sm content-color">Bem Vindo ao Fabios Roadstop! </p>

        <!-- Login Section Start -->
        <section class="login-section p-0">
            <!-- Login Form Start -->


            <form method="post" class="custom-form">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('admin/app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                <h1 class="font-md title-color fw-600">Login</h1>


                <div class="input-box">
                    <input type="email" value="{{ last_username }}" placeholder="Seu Email" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus />
                    <i data-feather="at-sign"></i>
                </div>

                <!-- Password Input start -->
                <div class="input-box">
                    <input type="password" placeholder="Password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required />
                    <i class="iconly-Hide icli showHidePassword"></i>
                </div>



                <a href="forgot-password.html" class="content-color font-sm forgot mb-3">Esqueci-me da Password ?</a>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <div class="text-center">
                    <button type="submit" class="btn-solid">Entrar</button>
                    <span class="content-color font-sm d-block text-center fw-600">Se é novo, <a href="{{ path('appapp_register') }}" class="underline">Cria Conta Agora </a></span>
                </div>
            </form>



            <!-- Login Form End -->

