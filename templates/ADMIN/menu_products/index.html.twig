                                    <script>
                                        $('.box-category-'+{{ category.id }}).hover(function () {
                                            $('.options-'+{{ category.id }}).show();
                                        });
                                        $('.box-category-'+{{ category.id }}).mouseleave(function () {
                                            $('.options-'+{{ category.id }}).hide();
                                        });
