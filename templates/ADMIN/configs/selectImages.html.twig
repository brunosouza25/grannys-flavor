{% block javascripts %}
    {{ parent() }}

    <script>
        $("form#multiple-files-upload").submit(function(e) {
            e.preventDefault();
            const formData = new FormData(this);
            $.ajax({
                url: '{{ path('admin/select_images') }}',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,

                success: function(data) {
                    Swal.fire({
                        position: 'top-end',
                        icon: 'success',
                        title: 'Adicionado',
                        showConfirmButton: false,
                        timer: 2500
                    });

                    setTimeout(function() {
                        location.reload();
                    }, 1000);
                },
                error: function(e) {

                    Swal.fire({
                        position: 'top-end',
                        icon: 'success',
                        title: 'Occoreu erro!',
                        showConfirmButton: false,
                        timer: 2500
                    });
                }
            });
        });
    </script>

