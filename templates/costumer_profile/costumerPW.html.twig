{% extends 'costumer_profile/base-costumer.html.twig' %}

{#{% block title %}{{ titlePage }}{% endblock %}#}

{% block body %}

    <div class="col-lg-12">
        <div class="dsp container">
{#            <h4>Configurações gerais</h4>#}
            <br>
            <form action="method" name="upload-file" id="save-config" enctype="multipart/form-data">
                <div class="container px-4">
                    <h5>Password</h5>
                    <div class="row">
                        <div class="col-6">
                        <div class="col-12 mb-4">
                            <label for="password1">Senha</label>
                            <input name="password1" id="password1" type="password" class="col-12" required>
                        </div>

                        <div class="col-12">
                            <label for="password2">Confirmação de Senha</label>
                            <input name="password2" id="password2" type="password" class="col-12" required>
                        </div>
                        </div>
                    </div>
                    <br>
                    <br>
                    <button type="submit" name="submit" id="submit" class="ml-3 btn btn-primary dsp" >
                        Salvar configurações
                    </button>
                    <div class="col-lg-12" id="display_product_list">
                        <ul></ul>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}

    <script>
        $("form#save-config").submit(function (e) {
            e.preventDefault();
            const formData = new FormData(this);
            $.ajax({
                url: '/costumePWset',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,

                success: function (data) {

                    if (data.state === '0') {
                        Swal.fire({
                            position: 'top-end',
                            icon: 'success',
                            title: 'Atualizado',
                            showConfirmButton: false,
                            timer: 2500
                        });
                    }else if(data.state === '1'){

                        Swal.fire({
                            position: 'top-end',
                            icon: 'erro',
                            title: 'senhas não identicas',
                            showConfirmButton: false,
                            timer: 3500
                        });
                    }
                    setTimeout(function () {
                        location.reload();
                    }, 1000);
                },
                error: function (e) {
                    console.log(e);
                    Swal.fire({
                        position: 'top-end',
                        icon: 'success',
                        title: 'Occoreu erro!',
                        showConfirmButton: false,
                        timer: 2500
                    });
                }
            });
        });
    </script>

{% endblock %}