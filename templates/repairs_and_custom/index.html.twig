{% block title %}Hello RepairsAndCustomController!{% endblock %}

{% block body %}

    <!--================ End of Breadcrumb ================-->
    <div class="mad-content no-pd">
        <div style="background-image:url('{{ asset('uploads/img/main.jpg') }}');"
             class="bannerrepair pt-2 text-light d-flex flex-column align-items-center justify-content-center ">
            <div>
                <h1 class="text-white">Repairs and Customization</h1>
                <h5 class="text-white">HOME / Repairs and Customization</h5>
            </div>
        </div>
        <div class="row">
            <div class="col-1 d-none d-xl-block d-xxl-block">
