                                <div class="col-6">
                                    <label for="name">Nome</label>
                                    <input name="name" class="col-12 inputText" type="text">
                                </div>
                                <div  class="col-6">
                                    <label for="email">E-mail</label>
                                    <input name="email" class="col-12 inputText"  type="text">

                                </div>
                                <button class="btn btn-dark px-5 rounded d-block" type="submit">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>


                <div class="col-6 d-flex align-items-center">
                    <div class="image-box-3 img-box-2" style="background-image:url('{% if banner2 is not empty %} {{ banner2.path }} {% endif %}');"></div>
